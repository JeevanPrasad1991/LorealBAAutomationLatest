<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/custom_margin"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_margin"
            android:background="@drawable/rouded_corner_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:padding="@dimen/text_margin_10dp"
                android:text="Brand Name - Sku Name"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_28sp" />

            <LinearLayout
                android:id="@+id/rl_stock_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_margin"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/stock_img_plus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="+"
                    android:padding="@dimen/custom_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_layout_margin" />

                <TextView
                    android:id="@+id/ed_Stock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="0"
                    android:padding="@dimen/custom_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_layout_margin"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/stock_img_minus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="-"
                    android:padding="@dimen/custom_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_layout_margin" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/mrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_stock_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10">

                <TextView
                    android:id="@+id/sku_text_recieved"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_layout_margin"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/pos_stock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_layout_margin"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/pos_stock_img_plus"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="@dimen/custom_layout_margin" />

                <TextView
                    android:id="@+id/pos_stock_text_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_layout_margin"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/pos_stock_img_minus"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/custom_layout_margin" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>